<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Logo centered on the screen -->
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/energy_drink"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:contentDescription="App Logo" />

        <!-- Explanation Text below the logo -->
        <TextView
            android:id="@+id/explanationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Energy Drink! Use the settings below to customize the floating widget."
            android:textColor="?attr/colorOnSurface"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <!-- Start Service Button -->
        <Button
            android:id="@+id/startServiceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Service"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />

        <!-- Toggle for power button behavior -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/powerButtonToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shutdown on Power Button Press"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <!-- Opacity Control Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Widget Opacity"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <SeekBar
                android:id="@+id/opacitySlider"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="100" />

            <TextView
                android:id="@+id/opacityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginStart="8dp"
                android:minWidth="48dp" />

        </LinearLayout>

        <!-- Auto Timeout Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Timeout"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <Spinner
            android:id="@+id/timeoutSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Custom Icon Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Icon"
            android:textColor="?attr/colorOnSurface"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/customIconPreview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/energy_drink_floating"
                android:contentDescription="Custom Icon Preview" />

            <Button
                android:id="@+id/selectIconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select"
                android:layout_marginStart="16dp" />

            <Button
                android:id="@+id/clearIconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:visibility="gone"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
